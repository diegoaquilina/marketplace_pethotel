<div class= "container">
<h1>Adicione uma hospedagem</h1>

<%= simple_form_for @location, as: :location, url: locations_path(@location), method: :post do |f| %>
<%= f.input :address %>
<%= f.input  :home_type, collection: Location::HOME_TYPE.map { |e| e.capitalize}, include_blank: false %>
<%= f.input  :total_occupancy %>
<%= f.label :summary %>
<%= f.text_area  :summary, class: "mx-auto w-100" %>
<%= f.submit "cadastrar hospedagem", class:"btn btn-primary" %>
<% end %>
</div>

