<h1>Suas reservas<b><%= @reservation %></h1>

<%# if @reservations.empty? %>
  "Voce nao possui nenhuma reserva confirmada."
<%# else %>
  <div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Duration</th>
        <th>Total</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <%# @reservations.each do |reservation| %>
          <tr>
            <td><%= l reservation.date, :format => :date_with_time %></td>
            <td><%= reservation.duration %></td>
            <td><%= link_to 'Show', reservation_path(reservation.location, reservation) %></td>
          </tr>
        <%# end %>
      </tbody>
    </table>
  </div>
<%# end %>