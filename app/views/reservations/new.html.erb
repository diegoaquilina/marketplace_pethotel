<% else %>
    <%= simple_form_for [@reservation], as: :reservation, url: location_reservations_path(@location.id), method: :post do |f| %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :price %>
    <%= f.input :total %>
    <%#= f.input :status %>
